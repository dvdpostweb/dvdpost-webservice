<% if current_customer.next_abo_type_id != abo.id %>
  <% showing = @showing_abo > 0 ? true : false %>
  <% style = get_style(current_abo_credit, abo.credits, showing)%>
  <% @showing_abo = @showing_abo - 1 if style == 'table-row' %>

  <tr class="abo" style="display:<%= style %>">
    <td width="33"><div class="check" id ='<%= abo.id %>'></div></td>
    <td><img src="/images/dvd<%= abo.credits %>.png" align="absmiddle" /></td>
    <td width="155"><%= t '.film', :count => abo.credits %></td>
    <td align="right"><strong><span class="title_prices">&euro; <%= abo.product.price %></span></strong></td>
  </tr>
  <tr class="abo" style="display:<%= style %>">
    <td colspan="5"class="separtions"></td>
  </tr>  
<% end %>
