<% path = product_path(:id => recommendation.to_param, :recommendation => 1) %>
<li>
  <span class="stars">
    <%= rating_image_small(recommendation) %>
  </span>
  <% link_to path, :class => product_media_id(recommendation.media) do %> 
    <%= product_image_tag recommendation.image, :width => 76, :height => 118, :alt => "#{recommendation.title} (#{recommendation.year})" %>
    <%= content_tag(:span, '', :class => 'new') if recommendation.is_new? %>
  <% end %>
  <%= render :partial => 'products/wishlist', :locals => {:product => recommendation, :text => :short} %>
  <%= link_to recommendation.title, path, :class => 'more' %>
</li>