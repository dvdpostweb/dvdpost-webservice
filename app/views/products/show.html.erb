<!--   ==============   MAIN CONTENT   ==============   -->
<div id="maincontent" >
  <div id="detail-wrap">
    <div class="top"></div>
    <!-- Detail -->
    <div id="breadcrumb"><a href="#">Emotion/drame</a> &rsaquo; Destin</div>
    <h2><%= "#{@product.title} (#{@product.year})" %></h2>
    <div class="box">
      <div class="box-content clearfix"> <img src="/images/right-shadow-top.gif" alt="" class="right" />
        <div id="details">
          <div id="movie-info">
            <ul>
              <li><strong>Réalisé par :</strong> <strong><%= link_to @product.director.name %></strong></li>
              <li><strong>Acteurs :</strong> <%= @product.actors.collect{|actor| link_to actor.name}.join(', ') %></li>
              <li><strong>Durée :</strong> <%= "#{@product.runtime} minutes" %></li>
              <li><strong>Genre :</strong> <%= @product.categories.collect{|category| category.name}.join(', ') %></li>
              <li><strong>Pays :</strong> <%= @product.country.name %></li>
              <li><strong>Public :</strong> <%= image_tag @product.public.image, :alt => @product.public.description %></li>
            </ul>
            <p class="links">
              <%= link_to 'Bande-annonce', @product.trailer.url, {:class => 'trailer', :target => :_blank} %>
              <span><img src="/images/delimiter.gif" alt="" /></span>
              <%= link_to 'Site officiel', @product.description.full_url, {:class => 'link', :target => :_blank} %>
            </p>
            <p>
              Audio : <%= Language.by_language(I18n.locale).preferred.collect{|language| image_tag "#{language.code}-#{@product.languages.preferred.include?(language) ? 'yes' : 'no'}.png" } %>
              Sous-titres : <%= Subtitle.by_language(I18n.locale).preferred.collect{|subtitle| image_tag "#{subtitle.code}-#{@product.subtitles.preferred.include?(subtitle) ? 'yes' : 'no'}.png" } %>
            </p>
            <p id="oscars">
              <strong>Académie des Oscars 2009</strong><br />
              Oscar du Meilleur Film<br />
              Oscar du Meilleur Réalisateur<br />
              <a href="#">Lire la suite</a>
            </p>
            <p>
              <strong>Image :</strong> <%= @product.picture_format.name %><br />
              <strong>Détail du son :</strong> <%= @product.soundtracks.collect{|soundtrack| soundtrack.name}.join(', ') %>
            </p>
            <div class="cover">
              <span id="dvd">
                <%= image_tag "/images/poster.jpg", :alt => "#{@product.title} (#{@product.year})" %>
                <%= content_tag(:span, '', :class => 'new') if true %>
              </span>
              <a href="#" class="like-btn">Ajouter à ma liste</a>
            </div>
          </div>
          <div class="action">
            <div id="dvdpost-coup"><img src="/images/dvdpost-coup.png" alt="" /> Coup de coeur DVDPost</div>
            <div align="center"><strong>Cotez ce film</strong></div>
            <ul>
              <li class="stars">
                <% @product.rating.times do |i| %>
                  <%= image_tag 'star-on.jpg' %>
                <% end %>
                <% (5-@product.rating).times do |i| %>
                  <%= image_tag 'star-off.jpg' %>
                <% end %>
              </li>
              <li class="links"><a href="#">Déjà Vu</a><span><img src="/images/delimiter.gif" alt="" /></span><a href="#" class="interest">Pas intéressé</a></li>
            </ul>
            <a href="#" class="like-btn" id="bluray-btn">Disponible en Blu-ray Disc</a>
            <div id="buy"><a href="#" class="like-btn" id="acheter-btn">Acheter</a> 7.95 &euro;</div>
          </div>
          <div class="clear"></div>
          <div id="sinopsis">
            <h3>Synopsis</h3>
            <p><%= @product.description.text %></p>
          </div>
        </div>
      </div>
    </div><!-- End Detail -->

    <!-- Critique -->
    <ul class="tabs">
